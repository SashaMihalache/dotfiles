{
  "ruby": {
    "on_save": [
      {
        "command": "ruby -wc \"<%= file %>\"",
        "on_error": {
          "title": "Ruby Linter",
          "message": "Found <%= output.lines.count %> ruby warnings!",
          "details": "<%= output %>"
        }
      }
    ]
  },
  "typescript": {
    "on_save": [
      {
        "command": ". $HOME/.asdf/asdf.sh; tslint -c \"<%= file_in_parent_tree('tslint.json') %>\" \"<%= file %>\"",
        "on_error": {
          "title": "TypeScript Linter",
          "message": "Found <%= output.strip.lines.count %> typescript warnings!",
          "details": "<%= output.strip %>"
        }
      }
    ]
  }
}
